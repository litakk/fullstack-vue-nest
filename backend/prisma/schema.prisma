generator client {
  provider = "prisma-client-js"
  //output   = "../generated/prisma"

}

datasource db {
  provider = "postgresql"
  // URL теперь задаётся только через prisma.config.ts / PrismaClientOptions
}

model User {
  id        String   @id @default(nanoid())
  name      String
  email     String   @unique
  password  String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt      @map("updated_at")

  gamesAsX TicTac[] @relation("PlayerX")
  gamesAsO TicTac[] @relation("PlayerO")

  @@map("users")
}

enum PlayerSymbol {
  X
  O
}

enum GameStatus {
  waiting
  playing
  won
  draw
}

model TicTac {
  id          String       @id @default(cuid())
  playerXId   String
  playerOId   String?
  board       String       @default("---------") // 9 символов для клеток, '-' пустая
  currentTurn PlayerSymbol @default(X)
  status      GameStatus   @default(waiting) // waiting, playing, won, draw
  winner      PlayerSymbol?
  isBotGame   Boolean      @default(false)
  botLevel    String?

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt      @map("updated_at")

  playerX User @relation("PlayerX", fields: [playerXId], references: [id])
  playerO User? @relation("PlayerO", fields: [playerOId], references: [id])

}
